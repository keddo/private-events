<%= render 'profile' %>

<% @user.events.each do |event| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
             <strong><%= event.eventname %></strong><br>
             <small><%= event.eventlocation %></small><br>
             <p>
               <%= event.eventdescription %>
               <small><%= event.eventdate %></small><br>
             </p>
          </div>
          <nav class="level">
           <div class="level-left is-mobile">
           <%= link_to event, class: 'button is-outlined' do %>
               <span class="icon has-text-info"> 
               <i class="fas fa-eye"></i>
               </span>
           <%= link_to edit_event_path(event), class: 'button is-outlined mx-2' do %>
               <span class="icon has-text-success"> 
               <i class="fas fa-pencil-alt"></i>
               </span>
           <% end %>
           <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class:"button is-outlined" do %>
               <span class="icon has-text-danger"> 
               <i class="fas fa-trash-alt"></i>
               </span>
           <% end %>
           </div>
        </nav>
        <% end %>
        </div>
      </article>
    </div>
   <% end %>