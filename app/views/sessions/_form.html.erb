<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2">Sign In</h2>

		<%= simple_form_for(:session, url: login_path) do |f| %>
    <%= f.error_notification %>


    <div class="field">
        <div class="control">
            <%= f.input :email, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
        </div>
    </div>

		  
    <div class="field">
        <div class="control">
            <%= f.input :password, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.button :submit, "Login", class:"button is-danger is-outlined is-medium" %>
        </div>
    </div>

    <% end %>
        <br />
    </div>
		</div>
	</div>
</div>