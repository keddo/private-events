<div class="column is-half">
<% if user_signed_in? %>
  <article class="media box">
     <figure class="media-left">
        <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name)%>
        </p>
     </figure>
  </article>
<% end %>
<article class="panel is-success">
    <p class="panel-heading">
      Upcomming Events
    </p>
    <% @comming_events.each do |event| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
             <strong><%= event.eventname %></strong><br>
             <small><%= event.eventlocation %></small><br>
             <p>
               <%= event.eventdescription %>
               <small><%= event.eventdate %></small><br>
             </p>
          </div>
        <% if user_signed_in? && current_user == event.creator %>
          <nav class="level">
           <div class="level-left is-mobile">
           <%= link_to event, class: 'button is-outlined' do %>
               <span class="icon has-text-info">
               <i class="fas fa-eye"></i>
               </span>
           <% end %>
           <%= link_to edit_event_path(event), class: 'button is-outlined mx-2' do %>
               <span class="icon has-text-success">
               <i class="fas fa-pencil-alt"></i>
               </span>
           <% end %>
           <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class:"button is-outlined" do %>
               <span class="icon has-text-danger">
               <i class="fas fa-trash-alt"></i>
               </span>
           <% end %>
           </div>
        </nav>
        <% end %>
        </div>
      </article>
    </div>
   <% end %>
  </article>
  <article class="panel is-danger">
    <p class="panel-heading">
      Previous Events
    </p>
    <% @prev_events.each do |event| %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
             <strong><%= event.eventname %></strong><br>
             <small><%= event.eventlocation %></small><br>
             <p>
               <%= event.eventdescription %>
               <small><%= event.eventdate %></small><br>
             </p>
          </div>
        <% if user_signed_in? && current_user == event.creator %>
          <nav class="level">
           <div class="level-left is-mobile">
           <%= link_to event, class: 'button is-outlined' do %>
               <span class="icon has-text-info">
               <i class="fas fa-eye"></i>
               </span>
           <% end %>
           <%= link_to edit_event_path(event), class: 'button is-outlined mx-2' do %>
               <span class="icon has-text-success">
               <i class="fas fa-pencil-alt"></i>
               </span>
           <% end %>
           <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class:"button is-outlined" do %>
               <span class="icon has-text-danger">
               <i class="fas fa-trash-alt"></i>
               </span>
           <% end %>
           </div>
        </nav>
        <% end %>
        </div>
      </article>
    </div>
   <% end %>
    </article>
  
  </div>