<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-4">
			
		<h2 class="title is-2">Create an Event</h2>

	<%= simple_form_for(@event) do |f| %>
	  <%= f.error_notification %>

	    <div class="field">
            <div class="control">
            <%= f.input :eventname, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
		</div>
	    <div class="field">
            <div class="control">
            <%= f.input :eventlocation, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
		</div>

		<div class="field">
            <div class="control">
            <%= f.input :eventdescription, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
            </div>
		</div>

		<div class="field">
            <div class="control">
            <%= f.input :eventdate, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
		</div>
  
		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "Create Event", class:"button is-danger is-outlined is-medium" %>
		 	</div>
		</div>

		<% end %>
			<br />
		</div>
		</div>
	</div>
</div>